<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sklay.chat"
    android:versionCode="5"
    android:versionName="2.1.0" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.GET_TASKS" />

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="10" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="cim"
        android:theme="@style/GlobeTheme" >
        <activity
            android:name="com.sklay.chat.ui.SplanshActivity"
            android:alwaysRetainTaskState="true"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.sklay.chat.ui.SystemMessageActivity"
            android:alwaysRetainTaskState="true"
            android:launchMode="singleTask"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="com.sklay.push.look.notify" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>

            <meta-data
                android:name="CIM_RECEIVE_ORDER"
                android:value="100" />
        </activity>
        <activity
            android:name="com.sklay.chat.ui.LoginActivity"
            android:alwaysRetainTaskState="true"
            android:launchMode="singleTop"
            android:screenOrientation="portrait" />

        <service
            android:name="com.sklay.core.chat.client.android.CIMPushService"
            android:process=":cimpush" />

        <!-- 消息接受广播注册 -->
        <receiver
            android:name="com.sklay.chat.receiver.CustomCIMMessageReceiver"
            android:exported="false" >
            <intent-filter>
                <action android:name="android.net.conn.CONNECTIVITY_CHANGE" /> <!-- 网络变化广播 -->
                <action android:name="com.sklay.push.MESSAGE_RECEIVED" /> <!-- 消息广播action -->
                <action android:name="com.sklay.push.SENT_FAILED" /> <!-- 发送sendbody失败广播 -->
                <action android:name="com.sklay.push.SENT_SUCCESS" /> <!-- 发送sendbody成功广播 -->
                <action android:name="com.sklay.push.CONNECTION_CLOSED" /> <!-- 链接意外关闭广播 -->
                <action android:name="com.sklay.push.CONNECTION_FAILED" /> <!-- 链接失败广播 -->
                <action android:name="com.sklay.push.CONNECTION_SUCCESS" /> <!-- 链接成功广播 -->
                <action android:name="com.sklay.push.REPLY_RECEIVED" /> <!-- 发送sendbody成功后获得replaybody回应广播 -->
                <action android:name="com.sklay.push.CONNECTION_STATUS" /> <!-- 获取到与服务端连接状态广播 -->
            </intent-filter>
        </receiver>
    </application>

</manifest>